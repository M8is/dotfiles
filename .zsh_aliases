
# VPN helpers
VPN_NAME='openvpn-cqse'
CONF_FILE='/home/mattis/config.ovpn'
alias vpn-log-read='sudo tail -f -n 100 /var/log/syslog | grep ${VPN_NAME}'
alias vpn='sudo openvpn --config "$CONF_FILE" --daemon ${VPN_NAME} && vpn-log-read'

# Monitor helpers
PRIMARY_OUT=$(xrandr | awk '/ connected/{i++}i==1{print $1; exit}')
SECONDARY_OUT=$(xrandr | awk '/ connected/{i++}i==2{print $1; exit}')
alias hdmi-above="xrandr --output $SECONDARY_OUT --above $PRIMARY_OUT"
alias hdmi-right="xrandr --output $SECONDARY_OUT --right-of $PRIMARY_OUT"
alias hdmi-left="xrandr --output $SECONDARY_OUT --left-of $PRIMARY_OUT"
alias hdmi-same="xrandr --output $SECONDARY_OUT --same-as $PRIMARY_OUT"
alias hdmi-secondary-only="xrandr --output $SECONDARY_OUT --primary && xrandr --output $PRIMARY_OUT --off"

function hdmi-wide {
  MODENAME='3840x1080'
  MODELINE=$(cvt 3840 1080 30 | grep -oP '(?<="\s\s).+')
  xrandr --newmode $MODENAME $(echo $MODELINE)
  xrandr --addmode $1 $MODENAME
  xrandr --output $1 --mode $MODENAME
}

# screenshot
alias screenshot='xwd | convert xwd:- capture.png'

