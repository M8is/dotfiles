
# VPN helpers
VPN_NAME='openvpn-cqse'
CONF_FILE='/home/mattis/config.ovpn'
alias vpn-log-read='sudo tail -f -n 100 /var/log/syslog | grep ${VPN_NAME}'
alias vpn='sudo openvpn --config "$CONF_FILE" --daemon ${VPN_NAME} && vpn-log-read'

# Monitor helpers
alias hdmi-above='xrandr --output HDMI-1 --above eDP-1'
alias hdmi-right='xrandr --output HDMI-1 --right-of eDP-1'
alias hdmi-left='xrandr --output HDMI-1 --left-of eDP-1'
alias hdmi-same='xrandr --output HDMI-1 --same-as eDP-1'

