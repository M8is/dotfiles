<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/3.4/menu">

<menu id="root-menu" label="Openbox 3">
  <item label="Log Out">
    <action name="Execute">
      <command>openbox --exit</command>
      <prompt>Log Out?</prompt>
    </action>
  </item>
  <item label="Shutdown">
    <action name="Execute">
      <command>shutdown now</command>
      <prompt>Shutdown?</prompt>
    </action>
  </item>
  <item label="Reboot">
    <action name="Execute">
      <command>shutdown --reboot now</command>
      <prompt>Reboot?</prompt>
    </action>
  </item>
</menu>

</openbox_menu>
